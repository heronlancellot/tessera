{
  "name": "@tessera/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",

    "db:start": "npx supabase start",
    "db:stop": "npx supabase stop",
    "db:reset": "npx supabase db reset",
    "db:new": "npx supabase migration new",
    "db:types": "npx supabase gen types typescript --local > src/db/types.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.47.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "ethers": "^6.13.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "supabase": "^2.19.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
